command /staff [<text>]:
    trigger:
        if player has permission "server.ops":
            if arg-1 is "enable":
                execute console command "op %player%"
                send "&eOp are &aenabled&e for &3%player%" to player
            if arg-1 is "e":
                execute console command "op %player%"
                send "&eOp are &aenabled&e for &3%player%" to player
            if arg-1 is "disable":
                execute console command "deop %player%"
                send "&eOp are &cdisabled&e for &3%player%" to player
            if arg-1 is "d":
                execute console command "deop %player%"
                send "&eOp are &cdisabled&e for &3%player%" to player
            else if arg-1 is not "enable" or "disable" or "e" or "d":
                send "&4Invalid argument ! set to &aenable&4 or &cdisable&4." to player

command /trash [<text>]:
	executable by: player and console
	aliases: essentials:trash, bin, essentials:bin
	description: &fEssentials command /trash !
	trigger:
		if sender is a player:
			wait 2 ticks
			open chest with {@Essentials-use-trash-use-numbers-use-slot-use} rows named "{@Essentials-use-trash-use-named-use}" to player
			send "{@Essentials-use-trash-use}" to player
			stop
		if sender is console:
			send "{@Essentials-use-console-use-nocommand-use}" to console
			stop

on command "bin" or "essentials:bin" or "trash" or "essentials:trash":
	if sender is a player:
		if player has permission "essentials.*" or "essentials.trash":
			stop
		if player doesn't have permission "essentials.*" or "essentials.trash":
			cancel event
			send "{@Essentials-use-player-use-nopermission-use}" to player
			stop

